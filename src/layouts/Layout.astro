---
interface Props {
	title?: string;
	description?: string;
}

const {
	title = 'No Sheetâ„¢ Sherlock - Developer Tools for Google Sheets',
	description = 'Powerful developer functions for Google Sheets. JSON manipulation, encoding, text processing, and more. Stop wrestling with your data - let Sherlock solve it.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		<script
			defer
			src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"
		></script>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	html {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu,
			Cantarell, sans-serif;
		line-height: 1.6;
		color: #1f2937;
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		padding: 0;
		background: #ffffff;
	}

	* {
		box-sizing: border-box;
	}

	a {
		color: #2563eb;
		text-decoration: none;
		transition: color 0.2s;
	}

	a:hover {
		color: #1d4ed8;
	}
</style>
